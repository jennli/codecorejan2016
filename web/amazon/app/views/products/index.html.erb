<div class="container">
  <h2>Browse Amazon Products</h2>

  <div class="row">
    <% @products.each do |x| %>
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" >
      <span class="glyphicons glyphicon-apple"></span>
      <h4><%= link_to x.name, product_path(x) %></h4>
      <h5><%=number_to_currency x.price %></h5>
    </div>
    <% end %>
  </div>
</div>
