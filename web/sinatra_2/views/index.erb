<style>

body{
  background-color: <%= session[:background_color] %>;
}

</style>

<h1>Contact Me</h1>

<form action="/contact" method="post">
  <div>
    <label for="full-name">Full Name</label>
    <input type="text" id="full-name" placeholder="eg. jennifer li" name="full_name" required autofocus />
  </div>

  <div>
    <label for="email">Email</label>
    <input type="email" id="email" placeholder="gmail.com" name="email" required />
  </div>

  <div>
    <label>Department</label>
    <input type="radio" name="department" value="sales">Sales</input >
    <input type="radio" name="department" value="marketing">Marketing</input >
    <input type="radio" name="department" value="technical">Technical</input >
  </div>

  <div>
    <input type="checkbox" name="urgent" >Urgent</input>
  </div>

  <div>
    <select name="category">
      <option >Arts</option>
      <option value="Science">Science</option>
      <option value="Sports">Sports</option>
    </select>
  </div>

  <div>
    <textarea name="message" placeholder="eg.suggestions"> </textarea>
  </div>

  <div>
    <input type="hidden" name="id" value="123" />
  </div>

  <input type="submit" value="Submit!" />

</form>
