<div class="container profile-container">
  <div class="panel">
      <div class="row">
        <section class="col-lg-9 col-md-12 summary-container">
          <div class="row">
            <div class="col-xs-12">
              <h1 class="profile-name-header"><%= @user.full_name %></h1>
              <% if can? :manage, @user %>
              <%= link_to "Edit Account", edit_user_path(@user) %>
              <% end %>
            </div>
          </section>
        </div>
      </div> <!-- /panel-body-->
  </div>
</div>
